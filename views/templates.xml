<odoo>
    <data>
<!-- views/variant_grid_template.xml -->

		<template id="wsem_attribute_serie.variant_grid_template">
			<t t-name="wsem_attibute_serie.variant_grid_template">
				<table class="table">
					<thead>
						<!-- Esta fila actúa como los "encabezados dinámicos" -->
						<tr>
							<th>Color</th>
							<th t-esc="wizard.detail_ids[0].talla_1" t-if="wizard.detail_ids[0].talla_1"/>
							<th t-esc="wizard.detail_ids[0].talla_2" t-if="wizard.detail_ids[0].talla_2"/>
							<th t-esc="wizard.detail_ids[0].talla_3" t-if="wizard.detail_ids[0].talla_3"/>
						</tr>
					</thead>
					<tbody>
						<!-- Itera sobre los registros de color para llenar las filas -->
						<t t-foreach="colores" t-as="color">
							<tr>
								<td t-esc="color.name"/>
								<!-- Asumiendo que tienes una forma de acceder a las cantidades por talla para cada color.
									 Puedes adaptar esta sección según tu modelo de datos. -->
								<td><t t-esc="color.talla_1_qty"/></td>
								<td><t t-esc="color.talla_2_qty"/></td>
								<td><t t-esc="color.talla_3_qty"/></td>
							</tr>
						</t>
					</tbody>
				</table>
			</t>
		</template>
    </data>
</odoo>