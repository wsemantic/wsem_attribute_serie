<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <template id="variant_grid_template">
            <t t-name="module_name.variant_grid_template">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Color / Talla</th>
                            <th><t t-esc="talla_1_name"/></th>
                            <th><t t-esc="talla_2_name"/></th>
                            <th><t t-esc="talla_3_name"/></th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="colores" t-as="color">
                            <tr>
                                <td t-esc="color.name"/>
                                <td><t t-esc="color.talla_1_qty"/></td>
                                <td><t t-esc="color.talla_2_qty"/></td>
                                <td><t t-esc="color.talla_3_qty"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </t>
        </template>
    </data>
</odoo>