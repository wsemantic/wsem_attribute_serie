<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- Menú principal -->
        <menuitem id="menu_attribute_serie" name="Attribute Series" parent="sale.sale_menu_root" sequence="10"/>

        <!-- Acción para abrir la vista de lista de series de atributos -->
        <record id="action_attribute_serie" model="ir.actions.act_window">
            <field name="name">Attribute Series</field>
            <field name="res_model">attribute.serie</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú para la acción de series de atributos -->
        <menuitem id="menu_attribute_serie_list" name="Attribute Series" parent="menu_attribute_serie" action="action_attribute_serie" sequence="1"/>

        <!-- Vista de lista para series de atributos -->
        <record id="view_attribute_serie_tree" model="ir.ui.view">
            <field name="name">attribute.serie.tree</field>
            <field name="model">attribute.serie</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para series de atributos -->
        <record id="view_attribute_serie_form" model="ir.ui.view">
            <field name="name">attribute.serie.form</field>
            <field name="model">attribute.serie</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Items">
                                <field name="item_ids">
                                    <tree editable="bottom">
                                        <field name="attribute_value_id"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>		
		
		<record id="view_product_template_product_form_inherit" model="ir.ui.view">
			<field name="name">product.template.product.form.inherit</field>
			<field name="model">product.template</field>
			<field name="inherit_id" ref="product.product_template_only_form_view"/>
			<field name="arch" type="xml">
				<xpath expr="//field[@name='categ_id']" position="after">
					<field name="attribute_serie_id"/>
				</xpath>
			</field>
		</record>

		<record id="variant_grid_wizard_view_form" model="ir.ui.view">
			<field name="name">variant.grid.wizard.view.form</field>
			<field name="model">variant.grid.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<field name="purchase_order_line_id" invisible="1"/>
							<field name="attribute_serie_id" widget="custom_field_many2one_attribute_serie"/>
						</group>
						<field name="line_ids" widget="one2many" colspan="4" nolabel="1">
							<tree editable="bottom">
								<field name="color_id"/>
								<field name="talla_1" attrs="{'column_invisible': [('talla_1', '=', False)]}"/>
								<field name="talla_2" attrs="{'column_invisible': [('talla_2', '=', False)]}"/>
								<field name="talla_3" attrs="{'column_invisible': [('talla_3', '=', False)]}"/>
							</tree>
							<form>
								<group>
									<field name="color_id"/>
									<field name="talla_1"/>
									<field name="talla_2"/>
									<field name="talla_3"/>
								</group>
							</form>
						</field>
					</sheet>
					<footer>
						<button name="button_accept" type="object" string="Aceptar" class="oe_highlight"/>
						<button string="Cancelar" class="btn btn-default" special="cancel"/>
					</footer>
				</form>
			</field>
		</record>
		
		<record model="ir.actions.act_window" id="action_open_variant_grid_wizard">
			<field name="name">Abrir Variant Grid Wizard</field>
			<field name="type">ir.actions.act_window</field>
			<field name="res_model">variant.grid.wizard</field>
			<field name="view_mode">form</field>
			<field name="target">new</field>
			<field name="context">{'purchase_order_line_id': active_id}</field>
		</record>
		
		<!-- Extender la vista de formulario de la orden de compra para añadir un botón a la vista de lista embebida de líneas de pedido -->
        <record id="purchase_order_form_inherit_lines_button" model="ir.ui.view">
            <field name="name">purchase.order.form.inherit.lines.button</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree" position="inside">
                    <!-- Añadir botón en la vista de lista de las líneas de pedido. Asegúrate de reemplazar 'action_open_variant_grid_wizard' con el ID de tu acción -->
                    <button name="%(action_open_variant_grid_wizard)d" 
                            type="action" 
                            string="Abrir Wizard"/>
                </xpath>
            </field>
        </record>

		
	</data>
</odoo>
